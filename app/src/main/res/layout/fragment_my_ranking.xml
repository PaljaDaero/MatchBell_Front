<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF0F5">

    <!-- ======================= 1. 상단 메시지 바 (요청된 코드 수정 없이 유지) ======================= -->
    <ImageView
        android:id="@+id/message_bar"
        android:layout_width="375dp"
        android:layout_height="76dp"
        android:layout_marginTop="25dp"
        app:srcCompat="@drawable/bg_message_bar"
        android:contentDescription="@null"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tv_message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="궁합 랭킹"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintVertical_bias="0.43"

        app:layout_constraintStart_toStartOf="@id/message_bar"
        app:layout_constraintEnd_toStartOf="@+id/iv_bell"
        app:layout_constraintTop_toTopOf="@id/message_bar"
        app:layout_constraintBottom_toBottomOf="@id/message_bar" />

    <ImageView
        android:id="@+id/iv_bell"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_bell"
        android:contentDescription="알림 아이콘"
        android:layout_marginEnd="15dp"
        app:layout_constraintVertical_bias="0.43"

        app:layout_constraintEnd_toEndOf="@id/message_bar"
        app:layout_constraintTop_toTopOf="@id/message_bar"
        app:layout_constraintBottom_toBottomOf="@id/message_bar"
        app:layout_constraintStart_toEndOf="@id/tv_message" />
    <!-- ======================= 1. 끝 ======================= -->


    <!-- ======================= 2. 명지님의 랭킹 TOP3 타이틀 ======================= -->
    <TextView
        android:id="@+id/tv_ranking_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="명지님의 궁합 랭킹 TOP3"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginStart="32dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/message_bar" />

    <!-- 트로피 아이콘 (ic_trophy 사용) -->
    <ImageView
        android:id="@+id/iv_trophy"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_trophy"
        android:contentDescription="트로피 아이콘"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@id/tv_ranking_title"
        app:layout_constraintBottom_toBottomOf="@id/tv_ranking_title" />

    <!-- ======================= 3. 랭킹 목록 (Vertical Layout) ======================= -->
    <LinearLayout
        android:id="@+id/ll_ranking_list"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_ranking_title">

        <!-- 3-1. 1위 항목 -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/tv_rank1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1."
                android:textSize="18sp"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <ImageView
                android:id="@+id/iv_profile1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="16dp"
                android:src="@drawable/bg_profile_image"
                android:contentDescription="랭킹 1위 프로필 이미지"
                app:layout_constraintStart_toEndOf="@id/tv_rank1"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <TextView
                android:id="@+id/tv_name1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="차은우 님 (92점)"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                app:layout_constraintStart_toEndOf="@id/iv_profile1"
                app:layout_constraintTop_toTopOf="@id/iv_profile1"
                app:layout_constraintBottom_toBottomOf="@id/iv_profile1" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- 3-2. 2위 항목 -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/tv_rank2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2."
                android:textSize="18sp"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <ImageView
                android:id="@+id/iv_profile2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="16dp"
                android:src="@drawable/bg_profile_image"
                android:contentDescription="랭킹 2위 프로필 이미지"
                app:layout_constraintStart_toEndOf="@id/tv_rank2"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <TextView
                android:id="@+id/tv_name2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="이도현 님 (86점)"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                app:layout_constraintStart_toEndOf="@id/iv_profile2"
                app:layout_constraintTop_toTopOf="@id/iv_profile2"
                app:layout_constraintBottom_toBottomOf="@id/iv_profile2" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- 3-3. 3위 항목 -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/tv_rank3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3."
                android:textSize="18sp"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <ImageView
                android:id="@+id/iv_profile3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="16dp"
                android:src="@drawable/bg_profile_image"
                android:contentDescription="랭킹 3위 프로필 이미지"
                app:layout_constraintStart_toEndOf="@id/tv_rank3"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <TextView
                android:id="@+id/tv_name3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="하루아 님 (70점)"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                app:layout_constraintStart_toEndOf="@id/iv_profile3"
                app:layout_constraintTop_toTopOf="@id/iv_profile3"
                app:layout_constraintBottom_toBottomOf="@id/iv_profile3" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

    <!-- ======================= 4. 궁합 평균 비교 섹션 ======================= -->
    <TextView
        android:id="@+id/tv_average_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="명지님의 궁합은 어디쯤일까요?"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ll_ranking_list" />


    <!-- 4-1. 그래프 영역 (임시 View로 대체) -->
    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/chart_ranking_comparison"
        android:layout_width="0dp"
        android:layout_height="180dp"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="16dp"
        android:padding="10dp"
        android:background="@drawable/bg_white_rounded"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_average_title" />

</androidx.constraintlayout.widget.ConstraintLayout>
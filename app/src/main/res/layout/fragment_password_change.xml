<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF0F5"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="24dp">

        <ImageView
            android:id="@+id/iv_header_bg"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="16dp"
            android:scaleType="fitXY"
            android:src="@drawable/bg_message_bar"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="32dp"
            android:src="@drawable/ic_arrow_right"
            android:rotation="180"
            app:tint="#555555"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/iv_header_bg"
            app:layout_constraintBottom_toBottomOf="@id/iv_header_bg"/>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="비밀번호 변경"
            android:textColor="#333333"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/iv_header_bg"
            app:layout_constraintEnd_toEndOf="@id/iv_header_bg"
            app:layout_constraintTop_toTopOf="@id/iv_header_bg"
            app:layout_constraintBottom_toBottomOf="@id/iv_header_bg" />


        <TextView
            android:id="@+id/label_current_pw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="현재 비밀번호 :"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginTop="60dp"
            android:layout_marginStart="24dp"
            app:layout_constraintTop_toBottomOf="@id/iv_header_bg"
            app:layout_constraintStart_toStartOf="parent"/>

        <EditText
            android:id="@+id/et_current_pw"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_white_rounded"
            android:hint="********"
            android:inputType="textPassword"
            android:paddingHorizontal="16dp"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/label_current_pw"/>

        <TextView
            android:id="@+id/label_new_pw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="새 비밀번호 :"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginTop="24dp"
            android:layout_marginStart="24dp"
            app:layout_constraintTop_toBottomOf="@id/et_current_pw"
            app:layout_constraintStart_toStartOf="parent"/>

        <EditText
            android:id="@+id/et_new_pw"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_white_rounded"
            android:hint="********"
            android:inputType="textPassword"
            android:paddingHorizontal="16dp"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/label_new_pw"/>

        <TextView
            android:id="@+id/label_confirm_pw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="새 비밀번호 확인 :"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginTop="24dp"
            android:layout_marginStart="24dp"
            app:layout_constraintTop_toBottomOf="@id/et_new_pw"
            app:layout_constraintStart_toStartOf="parent"/>

        <EditText
            android:id="@+id/et_confirm_pw"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_white_rounded"
            android:hint="********"
            android:inputType="textPassword"
            android:paddingHorizontal="16dp"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/label_confirm_pw"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_confirm"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginHorizontal="60dp"
            android:layout_marginTop="60dp"
            android:background="@drawable/bt_my"
            android:text="확인"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/et_confirm_pw" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
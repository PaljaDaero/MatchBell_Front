<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF0F5"
    android:fillViewport="true"
    tools:context=".feature.auth.ProfileSetupFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="24dp">

        <!-- 타이틀 (위치 조정됨) -->
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="프로필 설정"
            android:textColor="@color/black"
            android:textSize="32sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- 프로필 이미지 (CardView 적용) -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_profile_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="32dp"
            app:cardCornerRadius="50dp"
            app:cardElevation="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_title">

            <ImageView
                android:id="@+id/iv_profile_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_profile_default"
                android:background="#FFB6C1"/> <!-- 배경색은 기존 유지 -->
        </androidx.cardview.widget.CardView>

        <!-- 카메라 아이콘 (추가됨) -->
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@android:drawable/ic_menu_camera"
            app:tint="#555555"
            android:layout_margin="4dp"
            android:elevation="2dp"
            app:layout_constraintBottom_toBottomOf="@id/card_profile_image"
            app:layout_constraintEnd_toEndOf="@id/card_profile_image"/>

        <TextView
            android:id="@+id/tv_profile_upload_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="프로필 사진 등록"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="@id/card_profile_image"
            app:layout_constraintStart_toStartOf="@id/card_profile_image"
            app:layout_constraintTop_toBottomOf="@id/card_profile_image" />

        <!-- 1. 닉네임 -->
        <TextView
            android:id="@+id/label_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="닉네임"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginTop="24dp"
            android:layout_marginStart="24dp"
            app:layout_constraintTop_toBottomOf="@id/tv_profile_upload_label"
            app:layout_constraintStart_toStartOf="parent"/>

        <EditText
            android:id="@+id/et_nickname"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_white_rounded"
            android:hint="닉네임을 입력하세요"
            android:paddingHorizontal="16dp"
            android:textSize="14sp"
            android:maxLength="10"
            app:layout_constraintTop_toBottomOf="@id/label_nickname"/>

        <!-- 2. 자기소개 -->

        <!-- 3. 성별 -->
        <TextView
            android:id="@+id/label_gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="성별"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginTop="24dp"
            android:layout_marginStart="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/et_nickname"/>

        <RadioGroup
            android:id="@+id/rg_gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="24dp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/label_gender">
            <RadioButton
                android:id="@+id/rb_male"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="남"
                android:checked="true"/>
            <RadioButton
                android:id="@+id/rb_female"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="여"/>
        </RadioGroup>

        <!-- 4. 생년월일 -->
        <TextView
            android:id="@+id/label_birth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="생년월일"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginTop="24dp"
            android:layout_marginStart="24dp"
            app:layout_constraintTop_toBottomOf="@id/rg_gender"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tv_birth_value"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_white_rounded"
            android:text="2005년 4월 25일"
            android:gravity="center_vertical"
            android:paddingHorizontal="16dp"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/label_birth"/>

        <!-- 5. 지역 -->
        <TextView
            android:id="@+id/label_region"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="지역"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginTop="24dp"
            android:layout_marginStart="24dp"
            app:layout_constraintTop_toBottomOf="@id/tv_birth_value"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tv_region_value"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_white_rounded"
            android:text="서울특별시"
            android:gravity="center_vertical"
            android:paddingHorizontal="16dp"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/label_region"/>

        <!-- 6. 직업 -->
        <TextView
            android:id="@+id/label_job"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="직업"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginTop="24dp"
            android:layout_marginStart="24dp"
            app:layout_constraintTop_toBottomOf="@id/tv_region_value"
            app:layout_constraintStart_toStartOf="parent"/>

        <EditText
            android:id="@+id/et_job"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_white_rounded"
            android:hint="학생 (명지대학교 컴퓨터공학과)"
            android:paddingHorizontal="16dp"
            android:textSize="14sp"
            android:singleLine="true"
            app:layout_constraintTop_toBottomOf="@id/label_job"/>

        <!-- 확인 버튼 -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_finish_signup"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginHorizontal="60dp"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="40dp"
            android:background="@drawable/bt_my"
            android:text="확인"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/et_job"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
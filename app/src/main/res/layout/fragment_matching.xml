<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF0F5">

    <ImageView
        android:id="@+id/message_bar"
        android:layout_width="375dp"
        android:layout_height="76dp"
        android:layout_marginTop="25dp"
        app:srcCompat="@drawable/bg_message_bar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:contentDescription="메시지 바 배경" />

    <TextView
        android:id="@+id/tv_message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="당신 바로 옆을 스친 운명의 상대"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintVertical_bias="0.43"
        app:layout_constraintStart_toStartOf="@id/message_bar"
        app:layout_constraintEnd_toStartOf="@+id/iv_bell"
        app:layout_constraintTop_toTopOf="@id/message_bar"
        app:layout_constraintBottom_toBottomOf="@id/message_bar" />

    <ImageView
        android:id="@+id/iv_bell"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_bell"
        android:layout_marginEnd="15dp"
        app:layout_constraintVertical_bias="0.43"
        app:layout_constraintEnd_toEndOf="@id/message_bar"
        app:layout_constraintTop_toTopOf="@id/message_bar"
        app:layout_constraintBottom_toBottomOf="@id/message_bar"
        app:layout_constraintStart_toEndOf="@id/tv_message"
        android:contentDescription="알림 벨 아이콘" />


    <!-- [리스트 스크롤 영역] --><ScrollView
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:paddingBottom="20dp"
    android:layout_marginTop="10dp"
    app:layout_constraintTop_toBottomOf="@id/message_bar"
    app:layout_constraintBottom_toBottomOf="parent">

    <LinearLayout
        android:id="@+id/ll_matching_items_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="24dp"
        android:paddingTop="10dp">

        <!-- [매칭 아이템 템플릿 - 이곳에 동적으로 아이템들이 추가될 예정입니다.] --><!-- 이 부분은 MatchingFragment.kt에서 동적으로 추가될 item_matching_user.xml 레이아웃을 사용합니다. --></LinearLayout>
</ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
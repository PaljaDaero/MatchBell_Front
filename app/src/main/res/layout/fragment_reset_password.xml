<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF0F5"
    android:padding="24dp">

    <TextView
        android:id="@+id/tv_title_reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:text="비밀번호 재설정"
        android:textColor="@color/black"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/label_new_pw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="새 비밀번호"
        android:textStyle="bold"
        android:layout_marginTop="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_title_reset" />

    <EditText
        android:id="@+id/et_new_pw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:background="@drawable/bg_white_rounded"
        android:hint="영문+숫자+특수문자 포함 8자 이상"
        android:importantForAutofill="no"
        android:inputType="textPassword"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/label_new_pw"
        tools:layout_editor_absoluteX="24dp" />

    <TextView
        android:id="@+id/label_new_pw_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="새 비밀번호 확인"
        android:textStyle="bold"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_new_pw" />

    <EditText
        android:id="@+id/et_new_pw_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_white_rounded"
        android:hint="비밀번호를 다시 입력하세요"
        android:inputType="textPassword"
        android:padding="12dp"
        android:layout_marginTop="8dp"
        android:importantForAutofill="no"
        app:layout_constraintTop_toBottomOf="@id/label_new_pw_confirm" />

    <Button
        android:id="@+id/btn_change_pw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:backgroundTint="#F8A5B6"
        android:text="변경하기"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/et_new_pw_confirm" />

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="8dp">

    <!-- 상대방 프로필 이미지 -->
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_profile_received"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/bg_profile_image"
        app:civ_border_width="1dp"
        app:civ_border_color="#FFC0CB"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 상대방 이름 (필요에 따라 표시/숨김) -->
    <TextView
        android:id="@+id/tv_user_name_received"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@id/iv_profile_received"
        app:layout_constraintTop_toTopOf="@id/iv_profile_received"
        tools:text="차은우" />

    <!-- 메시지 내용 (말풍선) -->
    <TextView
        android:id="@+id/tv_message_content_received"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_message_bubble_received"
        android:maxWidth="250dp"
        android:padding="10dp"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="@id/tv_user_name_received"
        app:layout_constraintTop_toBottomOf="@id/tv_user_name_received"
        tools:text="안녕하세요 ;)" />

    <!-- 시간 -->
    <TextView
        android:id="@+id/tv_timestamp_received"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:textColor="#AAAAAA"
        android:layout_marginStart="4dp"
        app:layout_constraintBottom_toBottomOf="@id/tv_message_content_received"
        app:layout_constraintStart_toEndOf="@id/tv_message_content_received"
        tools:text="오후 3:30" />

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF0F5"
    tools:context=".feature.ChatRoomFragment">

    <!-- ======================= 1. 상단 바 영역 (User Info & Actions) ======================= -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_chat_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:minHeight="80dp"
        android:background="@color/white"
        android:paddingVertical="8dp"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent">

        <!-- 뒤로가기 버튼은 편의상 다시 추가했습니다. -->
        <ImageView
            android:id="@+id/iv_home"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_home"
            android:contentDescription="홈으로가기"
            android:padding="4dp"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <!-- 상대방 프로필 이미지 -->
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_profile_chat_room"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="20dp"
            android:src="@drawable/bg_profile_image"
            app:civ_border_width="2dp"
            app:civ_border_color="#FFC0CB"
            app:layout_constraintStart_toEndOf="@id/iv_home"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <!-- 상대방 이름 -->
        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginStart="12dp"
            tools:text="차은우"
            app:layout_constraintStart_toEndOf="@id/iv_profile_chat_room"
            app:layout_constraintTop_toTopOf="@id/iv_profile_chat_room"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintBottom_toTopOf="@id/tv_match_score"/>

        <!-- 궁합 점수 -->
        <TextView
            android:id="@+id/tv_match_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#FF69B4"
            android:background="@drawable/bg_rounded_pink"
            android:paddingHorizontal="8dp"
            android:paddingVertical="2dp"
            android:layout_marginTop="2dp"
            tools:text="나와의 궁합 92점!"
            app:layout_constraintStart_toStartOf="@id/tv_user_name"
            app:layout_constraintBottom_toBottomOf="@id/iv_profile_chat_room"
            app:layout_constraintTop_toBottomOf="@id/tv_user_name"/>

        <!-- 신고 및 더보기 버튼 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <ImageView
                android:id="@+id/iv_report"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_report"
                android:contentDescription="신고 버튼"
                android:layout_marginEnd="8dp" />

            <!-- 더보기 버튼이 누락되어 다시 추가했습니다. -->
            <ImageView
                android:id="@+id/iv_more"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_plus"
                android:contentDescription="더보기" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- ======================= 2. 메시지 목록 영역 (RecyclerView) ======================= -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_chat_messages"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp"
        app:layout_constraintTop_toBottomOf="@id/cl_chat_header"
        app:layout_constraintBottom_toTopOf="@id/cl_input_area"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/item_message_received"
        tools:itemCount="10" />

    <!-- ======================= 3. 하단 입력창 영역 (Input Area) ======================= -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_input_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp"
        app:layout_constraintBottom_toBottomOf="parent"> <!-- ⚠️ 하단 제약을 부모의 하단(Bottom)에 연결하여 화면 바닥에 배치 -->

        <EditText
            android:id="@+id/et_message_input"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:hint="메시지 입력.."
            android:background="@drawable/bg_rounded_input"
            android:paddingHorizontal="12dp"
            android:layout_marginEnd="8dp"
            android:inputType="textMultiLine"
            android:maxLines="5"
            android:imeOptions="actionSend"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btn_send"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <Button
            android:id="@+id/btn_send"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="전송"
            android:backgroundTint="#FF69B4"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:cornerRadius="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- 참고: MainActivity에서 BottomNavigationView가 표시된다고 가정하고,
           ChatRoomFragment에서는 이 하단바를 가리도록 했으므로,
           rv_chat_messages가 cl_input_area 위까지 정확하게 채워집니다. -->

</androidx.constraintlayout.widget.ConstraintLayout>
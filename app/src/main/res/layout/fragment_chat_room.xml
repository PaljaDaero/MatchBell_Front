<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF0F5"
    tools:context=".feature.chat.ChatRoomFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_chat_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:minHeight="80dp"
        android:background="@color/white"
        android:paddingVertical="8dp"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/btn_home"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_home"
            android:contentDescription="홈으로가기"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="2dp"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_profile_chat_room"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="20dp"
            android:src="@drawable/bg_profile_image"
            app:civ_border_width="2dp"
            app:civ_border_color="#FFC0CB"
            app:layout_constraintStart_toEndOf="@id/btn_home"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginStart="12dp"
            tools:text="차은우"
            app:layout_constraintStart_toEndOf="@id/iv_profile_chat_room"
            app:layout_constraintTop_toTopOf="@id/iv_profile_chat_room"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintBottom_toTopOf="@id/tv_match_score"/>

        <TextView
            android:id="@+id/tv_match_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#FF69B4"
            android:background="@drawable/bg_rounded_pink"
            android:paddingHorizontal="8dp"
            android:paddingVertical="2dp"
            android:layout_marginTop="2dp"
            tools:text="나와의 궁합 92점!"
            app:layout_constraintStart_toStartOf="@id/tv_user_name"
            app:layout_constraintBottom_toBottomOf="@id/iv_profile_chat_room"
            app:layout_constraintTop_toBottomOf="@id/tv_user_name"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <ImageButton
                android:id="@+id/btn_report"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_report"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:backgroundTint="#00FFFFFF"
                android:padding="3dp"
                android:layout_marginEnd="4dp"
                app:cornerRadius="18dp" />

            <ImageButton
                android:id="@+id/btn_more"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_plus"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:backgroundTint="#00FFFFFF"
                android:padding="1dp"
                android:layout_marginEnd="4dp"
                app:cornerRadius="18dp" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_chat_messages"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toBottomOf="@id/cl_chat_header"
        app:layout_constraintBottom_toTopOf="@id/cl_message_input"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingHorizontal="8dp"
        android:paddingVertical="8dp"
        app:stackFromEnd="true"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/item_message_sent"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_message_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="8dp"
        android:elevation="4dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <EditText
            android:id="@+id/et_message_input"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:hint="메시지를 입력하세요"
            android:background="@drawable/bg_border_box"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"
            android:layout_marginEnd="8dp"
            android:inputType="textMultiLine"
            android:maxLines="5"
            android:scrollbars="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btn_send"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <ImageButton
            android:id="@+id/btn_send"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_send"
            android:contentDescription="메시지 전송"
            android:backgroundTint="#00FFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:padding="7dp"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF0F5">

    <!-- 헤더 -->
    <ImageView
        android:id="@+id/profile_header_bg"
        android:layout_width="375dp"
        android:layout_height="76dp"
        android:layout_margin="10dp"
        app:srcCompat="@drawable/bg_message_bar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tv_header_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="으누사마님의 상세 프로필"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginStart="32dp"
        app:layout_constraintStart_toStartOf="@id/profile_header_bg"
        app:layout_constraintTop_toTopOf="@id/profile_header_bg"
        app:layout_constraintBottom_toBottomOf="@id/profile_header_bg"
        app:layout_constraintVertical_bias="0.43" />

    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_bell"
        android:layout_marginEnd="15dp"
        app:layout_constraintEnd_toEndOf="@id/profile_header_bg"
        app:layout_constraintTop_toTopOf="@id/profile_header_bg"
        app:layout_constraintBottom_toBottomOf="@id/profile_header_bg"
        app:layout_constraintVertical_bias="0.43" />

    <!-- 상세 내용 스크롤 -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/profile_header_bg"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="24dp">

            <!-- 궁합 점수 -->
            <TextView
                android:id="@+id/tv_match_badge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="나와의 궁합 92점!"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:background="#EF4444"
                android:paddingHorizontal="24dp"
                android:paddingVertical="8dp"
                android:alpha="0.8"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- 프로필 사진 (클릭 이벤트 대상) -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cv_profile_image"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginTop="24dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="4dp"
                app:layout_constraintTop_toBottomOf="@id/tv_match_badge"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <ImageView
                    android:id="@+id/iv_lock_overlay"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="30dp"
                    android:background="#FFFFFF"
                    android:src="@drawable/ic_lock"
                    android:scaleType="fitCenter" />

                <ImageView
                    android:id="@+id/iv_profile_real"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/bg_profile_image"
                    android:scaleType="centerCrop"
                    android:visibility="gone" />
            </androidx.cardview.widget.CardView>

            <!-- 자기소개 -->
            <TextView
                android:id="@+id/label_intro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="자기소개"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginTop="32dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cv_profile_image" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="안녕하세요 잘 부탁드립니다!\n운명을 찾고 있습니다."
                android:textColor="#333333"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/label_intro" />

            <!-- 지역 (숨김/보임) -->
            <TextView
                android:id="@+id/label_region"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="지역"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="25dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView" />

            <ImageView
                android:id="@+id/iv_lock_region"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_lock"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/label_region" />

            <TextView
                android:id="@+id/tv_region_real"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="서울특별시"
                android:textColor="#333333"
                android:textSize="16sp"
                android:visibility="gone"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/label_region" />

            <!-- 생년월일 (숨김/보임) -->
            <TextView
                android:id="@+id/label_birth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="생년월일"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginTop="24dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/iv_lock_region" />

            <ImageView
                android:id="@+id/iv_lock_birth"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_lock"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/label_birth" />

            <TextView
                android:id="@+id/tv_birth_real"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2003.01.01"
                android:textColor="#333333"
                android:textSize="16sp"
                android:visibility="gone"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/label_birth" />

            <!-- 직업 -->
            <TextView
                android:id="@+id/label_job"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="직업"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginTop="24dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/iv_lock_birth" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="학생 (명지대학교 뮤지컬과)"
                android:textColor="#333333"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/label_job" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF0F5">

    <!-- ======================= 1. 상단 메시지 바 ======================= -->
    <ImageView
        android:id="@+id/message_bar"
        android:layout_width="375dp"
        android:layout_height="76dp"
        android:layout_marginTop="25dp"
        app:srcCompat="@drawable/bg_message_bar"
        android:contentDescription="@null"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tv_message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="나와 상대방의 궁합 결과"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintVertical_bias="0.43"
        app:layout_constraintStart_toStartOf="@id/message_bar"
        app:layout_constraintEnd_toStartOf="@+id/iv_bell"
        app:layout_constraintTop_toTopOf="@id/message_bar"
        app:layout_constraintBottom_toBottomOf="@id/message_bar" />

    <ImageView
        android:id="@+id/iv_bell"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_bell"
        android:contentDescription="알림 아이콘"
        android:layout_marginEnd="15dp"
        app:layout_constraintVertical_bias="0.43"
        app:layout_constraintEnd_toEndOf="@id/message_bar"
        app:layout_constraintTop_toTopOf="@id/message_bar"
        app:layout_constraintBottom_toBottomOf="@id/message_bar"
        app:layout_constraintStart_toEndOf="@id/tv_message" />

    <!-- ======================= 2. 궁합 점수 및 결과 섹션 ======================= -->

    <!-- 점수 안내 텍스트 -->
    <TextView
        android:id="@+id/tv_score_intro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="두 분의 궁합 점수는..."
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@id/message_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 점수 표시 -->
    <TextView
        android:id="@+id/tv_score_card"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginHorizontal="60dp"
        android:text="92점!"
        android:textSize="50sp"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/tv_score_intro"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- [수정] 궁합 성향 영역 (라벨과 내용 분리) -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_description_area"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="32dp"
        android:padding="40dp"
        android:background="@drawable/bg_border_box"
        app:layout_constraintTop_toBottomOf="@id/tv_score_card"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- 1. 나의 성향 라벨 -->
        <TextView
            android:id="@+id/tv_label_my_tendency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="김명지님의 성향:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- 1. 나의 성향 내용 -->
        <TextView
            android:id="@+id/tv_content_my_tendency"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="열정 에너지"
            android:textSize="16sp"
            android:textColor="#333333"
            android:layout_marginStart="12dp"
            app:layout_constraintStart_toEndOf="@id/tv_label_my_tendency"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBaseline_toBaselineOf="@id/tv_label_my_tendency" />

        <!-- 2. 상대 성향 라벨 -->
        <TextView
            android:id="@+id/tv_label_partner_tendency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="박마루님의 성향:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/tv_content_my_tendency"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- 2. 상대 성향 내용 -->
        <TextView
            android:id="@+id/tv_content_partner_tendency"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="책임감 의리"
            android:textSize="16sp"
            android:textColor="#333333"
            android:layout_marginStart="12dp"
            app:layout_constraintStart_toEndOf="@id/tv_label_partner_tendency"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBaseline_toBaselineOf="@id/tv_label_partner_tendency" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- 궁합 랭킹 보기 버튼 -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_ranking"
        android:layout_width="250dp"
        android:layout_height="56dp"
        android:text="궁합 랭킹 보기"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:layout_marginBottom="50dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/bt_my"
        app:layout_constraintTop_toBottomOf="@id/cl_description_area"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>